<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="DrawerBackgroundColor" format="reference"/>
    <attr name="ExpandBudgetDrawable" format="reference"/>
    <attr name="CollapseBudgetDrawable" format="reference"/>

    <style name="Light" parent="Theme.AppCompat.Light">
        <item name="DrawerBackgroundColor">@color/light_drawer_bg</item>
        <item name="ExpandBudgetDrawable">@drawable/ic_find_next_holo_light</item>
        <item name="CollapseBudgetDrawable">@drawable/ic_find_previous_holo_light</item>
