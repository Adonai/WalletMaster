    <style name="Dark" parent="Theme.AppCompat">
        <item name="DrawerBackgroundColor">@color/dark_drawer_bg</item>
        <item name="ExpandBudgetDrawable">@drawable/ic_find_next_holo_dark</item>
        <item name="CollapseBudgetDrawable">@drawable/ic_find_previous_holo_dark</item>
