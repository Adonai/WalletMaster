<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:id="@+id/dialog_table"
    android:measureWithLargestChild="false">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/name"
            android:id="@+id/name_label"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:ems="5"
            android:layout_weight="0.5"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_edit"
            android:hint="@string/sample"
            android:layout_weight="0.5" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/preferred_account"
            android:id="@+id/preferred_account_label"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:ems="5"
            android:layout_weight="0.5"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preferred_account_spinner"
            android:layout_weight="0.5"
            android:spinnerMode="dialog"
            android:prompt="@string/select_preferred_acc" />

    </TableRow>

</TableLayout>
